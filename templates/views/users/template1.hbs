            editableSpan.setAttribute('contenteditable', 'true');
            editableSpan.textContent = 'Includes all features';

            // Create the trash icon
            const trashIcon = document.createElement('i');
            trashIcon.classList.add('fas', 'fa-trash');
            trashIcon.style.marginLeft = '10px';

            // Append elements to the new icon-text-icon div
            newIconTextIconDiv.appendChild(checkCircleIcon);
            newIconTextIconDiv.appendChild(editableSpan);
            newIconTextIconDiv.appendChild(trashIcon);

            // Insert the new icon-text-icon div before the add button
            pricingTable.insertBefore(newIconTextIconDiv, addButton);
        });
    });

    // Function to generate gradient CSS property
