    document.addEventListener('DOMContentLoaded', function() {
        const addButton = document.querySelector('.add-feature');
        const pricingTable = document.getElementById('pricing-table-1');

        addButton.addEventListener('click', function() {
            // Create a new icon-text-icon div
            const newIconTextIconDiv = document.createElement('div');
            newIconTextIconDiv.classList.add('icon-text-icon');

            // Create the check circle icon
            const checkCircleIcon = document.createElement('i');
            checkCircleIcon.classList.add('fas', 'fa-check-circle');

            // Create the editable span
